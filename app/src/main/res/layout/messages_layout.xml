<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_image"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_person_black_24dp"
        />

    <TextView
        android:id="@+id/receiver_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/receiver_image"
        android:background="@drawable/receiver_messages_layout"
        android:padding="10dp"
        android:text="receiver_messages_layout"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/message_sender_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/message_receiver_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/sender_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/receiver_messages"
        android:background="@drawable/sender_messages_layout"
        android:padding="10dp"
        android:text="sender_messages_layout"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold" />



</RelativeLayout>